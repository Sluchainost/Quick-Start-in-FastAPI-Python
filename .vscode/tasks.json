{
    // Launching tasks: Terminal → Run Task... or Ctrl+Shift+P → Run Task
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Pytest",
            "type": "shell",
            "command": "pytest",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Format with Black",
            "type": "shell",
            "command": "black .",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Lint with Pylint",
            "type": "shell",
            "command": "pylint src/",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Type Check with Mypy",
            "type": "shell",
            "command": "mypy src/",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run FastAPI (Uvicorn)",
            "type": "shell",
            "command": "uvicorn main:app --reload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Alembic Migration (upgrade head)",
            "type": "shell",
            "command": "alembic upgrade head",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Create Alembic Migration (autogenerate)",
            "type": "shell",
            "command": "alembic revision --autogenerate -m \"New migration\"",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
