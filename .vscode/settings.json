// Settings for project
{
    // terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.enableFileLinks": "off",
    "terminal.integrated.scrollback": 1000,
    // editor
    "editor.minimap.enabled": false,
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.accessibilitySupport": "off",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.definitionLinkOpensInPeek": true,
    "editor.hover.delay": 100,
    "editor.roundedSelection": false,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.scrollByPage": true,
    "editor.selectionHighlight": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    // files
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/*.egg-info/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "2/**": true,
        "3/**": true,
        "4/**": true,
        "9/9-2/**": true,
        "5/5-1/**": true,
        "5/5-2/**": true,
    },
    // debug
    "debug.autoExpandLazyVariables": "on",
    "debug.inlineValues": "on",
    "debug.terminal.clearBeforeReusing": true,
    // disable or change junk features
    "window.commandCenter": false,
    "workbench.startupEditor": "none",
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": false,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "window.density.editorTabHeight": "compact",
    "accessibility.verbosity.comments": false,
    "search.defaultViewMode": "tree",
    "extensions.closeExtensionDetailsOnViewChange": true,
    // themes
    "workbench.colorTheme": "Monokai",
    "window.zoomLevel": 0.1,
    // git
    "git.autoRepositoryDetection": "subFolders",
    // python analysis and formatting
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.importFormat": "absolute",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.indexing": false,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.exclude": [
        "**/site-packages/**",
        ".venv/**",
        "**/__pycache__/**",
        "alembic/**",
        "migrations/**",
        "2/**",
        "3/**",
        "4/**",
        "9/9-2/**",
        "5/5-1/**",
        "5/5-2/**",
    ],
    // python formatting and imports
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // python testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    // python interpreter
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "codium.codeCompletion.enable": false,
}