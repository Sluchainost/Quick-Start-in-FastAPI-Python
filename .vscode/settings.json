// Settings for project
{
    // terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.enableFileLinks": "off",
    "terminal.integrated.scrollback": 1000,
    // editor
    "editor.minimap.enabled": false,
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.accessibilitySupport": "off",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.definitionLinkOpensInPeek": true,
    "editor.hover.delay": 100,
    "editor.roundedSelection": false,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.scrollByPage": true,
    "editor.selectionHighlight": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    // files
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/*.egg-info/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "**/.qodo/**": true,

        // ignore completed steps
        "**/step_2/**": true,
        "**/step_3/**": true,
        "**/step_4/**": true,
        "**/step_5/**": true,
        "**/step_6/**": true,
        "**/step_9/lesson_9_2/**": true
    },
    // debug
    "debug.autoExpandLazyVariables": "on",
    "debug.inlineValues": "on",
    "debug.terminal.clearBeforeReusing": true,
    // disable or change junk features
    "window.commandCenter": false,
    "workbench.startupEditor": "none",
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": false,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "window.density.editorTabHeight": "compact",
    "accessibility.verbosity.comments": false,
    "search.defaultViewMode": "tree",
    "extensions.closeExtensionDetailsOnViewChange": true,
    // themes
    "workbench.colorTheme": "Monokai",
    "window.zoomLevel": 0.1,
    // git
    "git.autoRepositoryDetection": "subFolders",
    // python interpreter
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // python testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.pytestArgs": ["tests"],
    // python analysis
    "python.analysis.exclude": [
        "**/global_template/**",
        "**/step_2/**",
        "**/step_3/**",
        "**/step_4/**",
        "**/step_5/**",
        "**/step_6/**",
        "**/step_9/**",
        "**/.venv/**",
        "**/.qodo/**",
        "**/__pycache__/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "**/.git/**",
        "**/build/**",
        "**/dist/**",
        "**/*.egg-info/**",
        "**/migrations/**",
        "**/alembic/**"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.useLibraryCodeForTypes": false,
    "python.analysis.diagnosticMode":"workspace",
    "python.analysis.autoSearchPaths": true,
    // code actions
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // codium
    "codium.codeCompletion.enable": false
}
